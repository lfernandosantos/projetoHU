<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <ImageView
        android:id="@+id/img_hotel_lista"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <TextView
        android:layout_below="@+id/img_hotel_lista"
        android:id="@+id/text_hotel_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/text_hotel_lista"
        android:id="@+id/text_cidade_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="#F000"
        android:layout_below="@id/text_cidade_lista"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
</RelativeLayout>